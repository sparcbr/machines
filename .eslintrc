{
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"plugins": ["react", "unused-imports", "react-hooks"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"rules": {
		"react/prop-types": "off",
		"no-unused-vars": [
			"error",
			{ "args": "after-used", "argsIgnorePattern": "^_" }
		],
		"unused-imports/no-unused-imports": "error",
		"no-mixed-spaces-and-tabs": "off",
		"react-hooks/rules-of-hooks": "error",
		"no-empty-function": "error",
		"no-eq-null": "error",
		"no-extra-bind": "error",
		"no-return-await": "error",
		"require-await": "error"
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"]
}
